{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "redirects": [
      { "source": "/", "destination": "/app/", "type": 302 },
      { "source": "/login", "destination": "/app/login", "type": 302 },
      { "source": "/dashboard", "destination": "/app/dashboard", "type": 302 },
      { "source": "/wallets", "destination": "/app/wallets", "type": 302 },
      { "source": "/requests", "destination": "/app/requests", "type": 302 },
      { "source": "/history", "destination": "/app/history", "type": 302 }
    ],
    "rewrites": [
      {
        "source": "/app/**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cross-Origin-Opener-Policy",
            "value": "same-origin-allow-popups"
          }
        ]
      },
      {
        "source": "/sw.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/workbox-*.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      },
      {
        "source": "/registerSW.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
